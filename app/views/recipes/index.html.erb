<center>
<h1>CookBook</h1>
<p>Bem-vindo ao maior livro de receitas online</p>
<%= flash[:notices] %>
<%= flash[:cuisine] %>
<%= render 'search_form' %>
</center>



<% if user_signed_in? %>

  <h4><%= link_to 'Criar lista de receitas', new_recipe_list_path %></h4>
  <h4><%= link_to 'Minhas listas de receitas', my_lists_path %></h4>
  <%if current_user.admin == true %>
    <h4><%= link_to 'Receitas pendentes', pendings_path %></h4>
    <h4><%= link_to 'Cadastrar tipo de receita', new_recipe_type_path %></h4>
    <h4><%= link_to 'Cadastrar cozinha', new_cuisine_path%></h4>
  <% end %>

<% end %>

<% @recipes.each do |recipe| %>
<div id="index">
  <h1><%= link_to recipe.title, recipe %></h1>
      <% if recipe.imagem.attached? %>
        <%= image_tag recipe.imagem %>
      <% end %>
  <ul>
    <li><%= recipe.recipe_type.name %></li>
    <li><%= recipe.cuisine.name %></li>
    <li><%= recipe.difficulty %></li>
    <li><%= "#{recipe.cook_time}minutos" %></li>
  </ul>
</div>
<% end %>
