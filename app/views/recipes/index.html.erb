<h1>CookBook</h1>
<p>Bem-vindo ao maior livro de receitas online</p>

<%= render 'search_form' %>

<h3><%= link_to 'Cadastrar Receita', new_recipe_path %></h3>
<h3><%= link_to 'Cadastrar tipo de receita', new_recipe_type_path %></h3>

<% if user_signed_in? %>
  <h3><%= link_to 'Sair', destroy_user_session_path, method: :delete %></h3>
<% else %>
  <h3><%= link_to 'Entrar', new_user_session_path %></h3>
<% end %>

<% @recipes.each do |recipe| %>
  <h1><%= link_to recipe.title, recipe %></h1>
  <ul>
    <li><%= recipe.recipe_type.name %></li>
    <li><%= recipe.cuisine %></li>
    <li><%= recipe.difficulty %></li>
    <li><%= "#{recipe.cook_time}minutos" %></li>
  </ul>
<% end %>
